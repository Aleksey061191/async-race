{
    "plugins": ["@typescript-eslint", "import"],
    "extends": [
        "eslint:recommended", 
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "airbnb-typescript/base"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "useJSXTextNode": true,
        "project": "./tsconfig.json"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "no-debugger": "off",
        "no-console": 0
    }
}